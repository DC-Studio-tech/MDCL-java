<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.mcdcl</groupId>
  <artifactId>MDCL-main</artifactId>
  <version>1.0-SNAPSHOT</version>
  <build>
    <plugins>
      <plugin>
        <groupId>org.panteleyev</groupId>
        <artifactId>jpackage-maven-plugin</artifactId>
        <version>1.6.0</version>
        <configuration>
          <name>MDCL</name>
          <appVersion>1.0.1</appVersion>
          <vendor>MDCL</vendor>
          <destination>target/dist</destination>
          <mainClass>org.mcdcl.Main</mainClass>
          <mainJar>MDCL-${project.version}.jar</mainJar>
          <input>target</input>
          <type>DMG</type>
          <icon>src/main/resources/images/icon.icns</icon>
          <macPackageIdentifier>com.dcstudio.mdcl</macPackageIdentifier>
          <javaOptions>
            <option>-Dfile.encoding=UTF-8</option>
          </javaOptions>
          <addModules>
            <module>javafx.controls</module>
            <module>javafx.fxml</module>
            <module>javafx.web</module>
            <module>javafx.swing</module>
            <module>javafx.media</module>
          </addModules>
          <modulePaths>
            <modulePath>/Users/zhuangweiwei/.m2/repository/org/openjfx/javafx-controls/21/javafx-controls-21-mac-aarch64.jar</modulePath>
            <modulePath>/Users/zhuangweiwei/.m2/repository/org/openjfx/javafx-fxml/21/javafx-fxml-21-mac-aarch64.jar</modulePath>
            <modulePath>/Users/zhuangweiwei/.m2/repository/org/openjfx/javafx-web/21/javafx-web-21-mac-aarch64.jar</modulePath>
            <modulePath>/Users/zhuangweiwei/.m2/repository/org/openjfx/javafx-swing/21/javafx-swing-21-mac-aarch64.jar</modulePath>
            <modulePath>/Users/zhuangweiwei/.m2/repository/org/openjfx/javafx-graphics/21/javafx-graphics-21-mac-aarch64.jar</modulePath>
            <modulePath>/Users/zhuangweiwei/.m2/repository/org/openjfx/javafx-base/21/javafx-base-21-mac-aarch64.jar</modulePath>
            <modulePath>/Users/zhuangweiwei/.m2/repository/org/openjfx/javafx-media/21/javafx-media-21-mac-aarch64.jar</modulePath>
          </modulePaths>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
        <configuration>
          <source>${maven.compiler.source}</source>
          <target>${maven.compiler.target}</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.4.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>org.mcdcl.Main</mainClass>
                </transformer>
              </transformers>
              <outputFile>${project.build.directory}/MDCL-${project.version}.jar</outputFile>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <properties>
    <maven.compiler.target>21</maven.compiler.target>
    <maven.compiler.source>21</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>
